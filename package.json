{
    "name": "oml-alexandria",
    "displayName": "oml-alexandria",
    "description": "Please enter a brief description here",
    "publisher": "xxx",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:oml",
        "onCommand:oml.diagram.open"
    ],
    "contributes": {
        "languages": [
            {
                "id": "oml",
                "aliases": [
                    "Oml",
                    "oml"
                ],
                "extensions": [
                    ".oml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "oml",
                "scopeName": "source.oml",
                "path": "./syntaxes/oml.tmLanguage.json"
            }
        ],
    
        "files": [
            "bin",
            "out",
            "src"
        ],
        "bin": {
            "oml-cli": "./bin/cli"
        },
        "commands": [
            {
                "command": "oml.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "Oml Diagram"
            }
        ],

        "menus": {
            "commandPalette": [
                {
                    "command": "oml.diagram.open",
                    "when": "editorLangId == 'oml'"
                }      
            ],
            "editor/context": [
                {
                    "command": "oml.diagram.open",
                    "when": "editorLangId == 'oml'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "oml.diagram.open",
                    "when": "editorLangId == 'oml'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "oml.diagram.open",
                    "when": "resourceExtname == '.oml'",
                    "group": "navigation"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "package": "cp ./oml-sprotty/pack/webview.js ./pack && yarn vsce package"

    },
    "dependencies": {
        "chalk": "~4.1.2",
        "chevrotain": "~10.4.2",
        "commander": "~10.0.0",
        "langium": "~1.1.0",
        "vscode-languageclient": "~8.0.2",
        "vscode-languageserver": "~8.0.2",
        "vscode-uri": "~3.0.7",
        "sprotty-vscode": "^0.1.3",
        "vsce": "^1.81.1"
       
    },
    "devDependencies": {
        "@types/node": "~16.18.11",
        "@types/vscode": "~1.67.0",
        "@typescript-eslint/eslint-plugin": "~5.51.0",
        "@typescript-eslint/parser": "~5.51.0",
        "esbuild": "^0.17.10",
        "eslint": "~8.33.0",
        "langium-cli": "~1.1.0",
        "typescript": "~4.9.5"
    }
}
