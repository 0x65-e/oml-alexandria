{
    "name": "oml-alexandria",
    "displayName": "oml-alexandria",
    "description": "Please enter a brief description here",
    "publisher": "xxx",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.67.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0x65-e/oml-alexandria"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:oml",
        "onWebviewPanel:oml",
        "onCustomEditor:oml",
        "onView:oml",
        "onCommand:oml.diagram.open"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "contributes": {
        "languages": [
            {
                "id": "oml",
                "aliases": [
                    "Oml",
                    "oml"
                ],
                "extensions": [
                    ".oml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "oml",
                "scopeName": "source.oml",
                "path": "./syntaxes/oml.tmLanguage.json"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "oml-container",
                    "title": "OML",
                    "icon": "$(symbol-structure)"
                }
            ]
        },
        "views": {
            "oml-container": [
                {
                    "id": "oml",
                    "type": "webview",
                    "name": "OML"
                }
            ]
        },
        "commands": [
            {
                "command": "oml.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "OML Diagram"
            },
            {
                "command": "oml.diagram.fit",
                "title": "Fit to Screen",
                "category": "OML Diagram"
            },
            {
                "command": "oml.diagram.center",
                "title": "Center selection",
                "category": "OML Diagram"
            },
            {
                "command": "oml.diagram.delete",
                "title": "Delete selected element",
                "category": "OML Diagram"
            },
            {
                "command": "oml.diagram.export",
                "title": "Export diagram to SVG",
                "category": "OML Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "oml.diagram.open",
                    "when": "editorLangId == 'oml'"
                },
                {
                    "command": "oml.diagram.fit",
                    "when": "oml-diagram-focused"
                },
                {
                    "command": "oml.diagram.center",
                    "when": "oml-diagram-focused"
                },
                {
                    "command": "oml.diagram.delete",
                    "when": "oml-diagram-focused"
                },
                {
                    "command": "oml.diagram.export",
                    "when": "oml-diagram-focused"
                }
            ],
            "editor/context": [
                {
                    "command": "oml.diagram.open",
                    "when": "editorLangId == 'oml'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "oml.diagram.open",
                    "when": "editorLangId == 'oml'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "oml.diagram.open",
                    "when": "resourceExtname == '.oml'",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "oml.diagram.fit",
                "when": "oml-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "oml.diagram.center",
                "when": "oml-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "oml.diagram.export",
                "when": "oml-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "oml.diagram.delete",
                "when": "oml-diagram-focused"
            }
        ]
    },
    "main": "./pack/extension.js",
    "scripts": {
        "prepare": "yarn run clean && yarn run build &&  yarn run copy-webview",
        "clean": "shx rm -fr pack",
        "build": "webpack --mode=development",
        "watch": "webpack --mode=development --watch",
        "copy-webview": "cp ./oml-sprotty/pack/webview.js ./pack",
        "package": "yarn vsce package"
    },
    "dependencies": {
        "chalk": "~4.1.2",
        "chevrotain": "~10.4.2",
        "commander": "~10.0.0",
        "elkjs": "^0.8.2",
        "langium": "~1.1.0",
        "langium-sprotty": "^1.1.0",
        "shx": "^0.3.4",
        "source-map": "^0.7.4",
        "sprotty-elk": "^0.13.1",
        "sprotty-vscode": "^0.5.0",
        "vsce": "^1.81.1",
        "vscode-languageclient": "~8.0.2",
        "vscode-languageserver": "~8.0.2",
        "vscode-proxy-agent": "^0.12.0",
        "vscode-uri": "~3.0.7"
    },
    "devDependencies": {
        "@types/node": "~16.18.11",
        "@types/vscode": "~1.67.0",
        "@typescript-eslint/eslint-plugin": "~5.51.0",
        "@typescript-eslint/parser": "~5.51.0",
        "esbuild": "^0.17.10",
        "eslint": "~8.33.0",
        "langium-cli": "~1.1.0",
        "source-map-loader": "^4.0.1",
        "ts-loader": "^9.4.2",
        "typescript": "~4.9.5",
        "webpack": "^5.76.0",
        "webpack-cli": "^5.0.1"
    }
}
