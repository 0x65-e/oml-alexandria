{
    "name": "oml-alexandria",
    "displayName": "OML Alexandria",
    "description": "Severless VSCode-compatible extension for OML",
    "version": "0.0.1",
    "publisher": "pteam-ptolemy",
    "license": "Apache-2.0",
    "icon": "images/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/0x65-e/oml-alexandria.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "config": {
        "oml_version": "1.4.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "oml",
                "aliases": [
                    "Oml",
                    "oml"
                ],
                "extensions": [
                    ".oml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "oml",
                "scopeName": "source.oml",
                "path": "./syntaxes/oml.tmLanguage.json"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "oml-container",
                    "title": "OML",
                    "icon": "$(symbol-structure)"
                }
            ]
        },
        "views": {
            "oml-container": [
                {
                    "id": "oml",
                    "type": "webview",
                    "name": "OML"
                }
            ]
        },
        "commands": [
            {
                "command": "oml.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "OML Diagram"
            },
            {
                "command": "oml.diagram.fit",
                "title": "Fit to Screen",
                "category": "OML Diagram"
            },
            {
                "command": "oml.diagram.center",
                "title": "Center selection",
                "category": "OML Diagram"
            },
            {
                "command": "oml.diagram.delete",
                "title": "Delete selected element",
                "category": "OML Diagram"
            },
            {
                "command": "oml.diagram.export",
                "title": "Export diagram to SVG",
                "category": "OML Diagram"
            },
            {
                "command": "oml.generate.uml",
                "title": "Generate UML",
                "category": "OML"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "oml.diagram.open",
                    "when": "editorLangId == 'oml'"
                },
                {
                    "command": "oml.diagram.fit",
                    "when": "oml-diagram-focused"
                },
                {
                    "command": "oml.diagram.center",
                    "when": "oml-diagram-focused"
                },
                {
                    "command": "oml.diagram.delete",
                    "when": "oml-diagram-focused"
                },
                {
                    "command": "oml.diagram.export",
                    "when": "oml-diagram-focused"
                },
                {
                    "command": "oml.generate.uml",
                    "when": "editorLangId == 'oml'"
                }
            ],
            "editor/context": [
                {
                    "command": "oml.diagram.open",
                    "when": "editorLangId == 'oml'",
                    "group": "navigation"
                },
                {
                    "command": "oml.generate.uml",
                    "when": "editorLangId == 'oml'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "oml.diagram.open",
                    "when": "editorLangId == 'oml'",
                    "group": "navigation"
                },
                {
                    "command": "oml.generate.uml",
                    "when": "editorLangId == 'oml'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "oml.diagram.open",
                    "when": "resourceExtname == '.oml'",
                    "group": "navigation"
                },
                {
                    "command": "oml.generate.uml",
                    "when": "resourceExtname == '.oml'",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "oml.diagram.fit",
                "when": "oml-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "oml.diagram.center",
                "when": "oml-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "oml.diagram.export",
                "when": "oml-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "oml.diagram.delete",
                "when": "oml-diagram-focused"
            }
        ]
    },
    "activationEvents": [
        "onWebviewPanel:oml",
        "onCustomEditor:oml"
    ],
    "files": [
        "bin",
        "pack",
        "src"
    ],
    "bin": {
        "oml-cli": "./bin/cli"
    },
    "main": "./pack/extension.js",
    "scripts": {
        "clean": "npx shx rm -rf pack out && npx shx mkdir pack",
        "vscode:prepublish": "npm run build:prod",
        "esbuild:dev": "esbuild ./src/extension.ts ./src/language-server/main.ts ./src/cli/index.ts  --sourcemap --bundle --outdir=pack --external:vscode --format=cjs --platform=node",
        "esbuild:prod": "esbuild ./src/extension.ts ./src/language-server/main.ts --bundle --outdir=pack --external:vscode --format=cjs --platform=node",
        "esbuild:watch": "npm run esbuild:dev --watch",
        "test-compile": "tsc -p ./",
        "build:sprotty": "cd oml-sprotty && yarn install && yarn build && npx shx mkdir -p ../pack && npx shx cp pack/webview.js ../pack/",
        "build:extension": "tsc -b tsconfig.json",
        "build": "npm run build:sprotty && npm run esbuild:dev",
        "build:win": "npm run build:sprotty:win && npm run esbuild:dev",
        "build:prod": "npm run clean && npm run build:sprotty && npm run esbuild:prod",
        "watch": "npm run build:sprotty && npm run esbuild:watch",
        "lint": "eslint src --ext ts",
        "docs": "npx shx rm -rf docs && typedoc --entryPointStrategy expand src/",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "chalk": "~4.1.2",
        "chevrotain": "~10.4.2",
        "commander": "~10.0.0",
        "elkjs": "^0.8.2",
        "fs": "^0.0.1-security",
        "langium": "~1.1.0",
        "langium-sprotty": "^1.1.0",
        "sprotty-elk": "^0.13.1",
        "sprotty-vscode": "^0.5.0",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "~8.0.2",
        "vscode-uri": "~3.0.7"
    },
    "devDependencies": {
        "@types/node": "~16.18.11",
        "@types/vscode": "~1.67.0",
        "@typescript-eslint/eslint-plugin": "~5.51.0",
        "@typescript-eslint/parser": "~5.51.0",
        "esbuild": "^0.17.11",
        "eslint": "~8.33.0",
        "langium-cli": "~1.1.0",
        "typedoc": "^0.23.26",
        "typedoc-plugin-merge-modules": "^4.0.1",
        "typescript": "~4.9.5",
        "vite": "^4.1.4",
        "vitest": "^0.29.2"
    }
}
